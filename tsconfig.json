{
  "include": ["env.d.ts", "src/**/*", "src/*.vue", "src/*", "src/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "verbatimModuleSyntax": false
  }
}